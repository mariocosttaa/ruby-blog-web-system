<% content_for :title, "Reset Password - MarioTechPortal" %>

<div class="w-full max-w-md px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-card rounded-lg shadow-lg border border-theme p-8 animate-on-scroll relative overflow-hidden">
            <!-- Top colored bar with gradient -->
            <div class="h-1 bg-gradient-to-r from-purple-500 to-purple-600 absolute top-0 left-0 right-0"></div>
            
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-purple-800 rounded-xl flex items-center justify-center mx-auto mb-6">
                    <span class="text-white text-2xl font-bold font-title">B</span>
                </div>
                <h2 class="text-3xl font-bold font-title mb-2" style="color: var(--text-color);">Reset Password</h2>
                <p class="text-secondary">Enter your new password below</p>
            </div>

            <!-- Flash messages -->
            <% if notice %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 text-sm">
                    <%= notice %>
                </div>
            <% end %>
            
            <% if alert %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
                    <%= alert %>
                </div>
            <% end %>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div>
                    <%= f.label :password, "New Password", class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" %>
                    <%= f.password_field :password, 
                        autofocus: true,
                        autocomplete: "new-password",
                        placeholder: "Enter your new password",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                    <% if @minimum_password_length %>
                        <div class="text-xs text-secondary mt-1"><%= @minimum_password_length %> characters minimum</div>
                    <% end %>
                </div>

                <div>
                    <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" %>
                    <%= f.password_field :password_confirmation, 
                        autocomplete: "new-password",
                        placeholder: "Confirm your new password",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                </div>

                <div>
                    <%= f.submit "Reset Password", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
                </div>
            <% end %>

            <div class="mt-6 text-center">
                <div class="text-sm text-secondary">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>