<% content_for :title, "Edit Profile - MarioTechPortal" %>

<div class="w-full max-w-lg px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-card rounded-lg shadow-lg border border-theme p-8 animate-on-scroll relative overflow-hidden">
            <!-- Top colored bar with gradient -->
            <div class="h-1 bg-gradient-to-r from-purple-500 to-purple-600 absolute top-0 left-0 right-0"></div>
            
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-purple-800 rounded-xl flex items-center justify-center mx-auto mb-6">
                    <span class="text-white text-2xl font-bold font-title">B</span>
                </div>
                <h2 class="text-3xl font-bold font-title mb-2" style="color: var(--text-color);">Edit Profile</h2>
                <p class="text-secondary">Update your account settings</p>
            </div>

            <!-- Flash messages -->
            <% if notice %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 text-sm">
                    <%= notice %>
                </div>
            <% end %>
            
            <% if alert %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
                    <%= alert %>
                </div>
            <% end %>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div>
                    <%= f.label :email, "Email Address", class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" %>
                    <%= f.email_field :email, 
                        autofocus: true, 
                        autocomplete: "email",
                        placeholder: "Your email address",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-lg text-sm">
                        <strong>Pending confirmation:</strong> Currently waiting confirmation for <%= resource.unconfirmed_email %>
                    </div>
                <% end %>

                <div>
                    <%= f.label :password, class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" do %>
                        Password
                        <span class="text-xs text-secondary font-normal">(leave blank if you don't want to change it)</span>
                    <% end %>
                    <%= f.password_field :password, 
                        autocomplete: "new-password",
                        placeholder: "New password",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                    <% if @minimum_password_length %>
                        <div class="text-xs text-secondary mt-1"><%= @minimum_password_length %> characters minimum</div>
                    <% end %>
                </div>

                <div>
                    <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" %>
                    <%= f.password_field :password_confirmation, 
                        autocomplete: "new-password",
                        placeholder: "Confirm new password",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                </div>

                <div>
                    <%= f.label :current_password, class: "block text-sm font-medium mb-2", style: "color: var(--text-color);" do %>
                        Current Password
                        <span class="text-xs text-secondary font-normal">(we need your current password to confirm changes)</span>
                    <% end %>
                    <%= f.password_field :current_password, 
                        autocomplete: "current-password",
                        placeholder: "Enter your current password",
                        class: "w-full px-4 py-3 border border-theme rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent",
                        style: "background-color: var(--card-bg); color: var(--text-color);" %>
                </div>

                <div>
                    <%= f.submit "Update Profile", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
                </div>
            <% end %>

            <!-- Danger Section -->
            <div class="mt-8 pt-6 border-t border-theme">
                <h3 class="text-lg font-bold mb-4" style="color: #dc2626;">Cancel Account</h3>
                <p class="text-sm text-secondary mb-4">Unhappy with your account? You can permanently delete it below.</p>
                <%= button_to "Delete My Account", registration_path(resource_name), 
                    data: { 
                        confirm: "Are you sure? This action cannot be undone.", 
                        turbo_confirm: "Are you sure? This action cannot be undone." 
                    }, 
                    method: :delete,
                    class: "w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
            </div>

            <div class="mt-6 text-center">
                <%= link_to "â† Back", :back, class: "text-sm text-purple-600 hover:text-purple-700 transition-colors duration-200" %>
            </div>
        </div>
    </div>
