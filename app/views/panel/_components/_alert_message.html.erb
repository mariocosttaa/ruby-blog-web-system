<% flash.each do |type, message| %>
  <%# Map Rails flash types to Tailwind alert classes %>
  <% alert_classes = case type.to_sym
     when :notice, :success then "border-green-200 text-green-700"
     when :alert then "border-yellow-200 text-yellow-700"
     when :error then "border-red-200 text-red-700"
     else "border-blue-200 text-blue-700"
     end %>

  <div class="<%= alert_classes %> border rounded-lg p-4 mb-6 animate-on-scroll" style="background-color: var(--card-bg);" role="alert">
    <div class="flex items-start">
      <div class="flex-shrink-0 mr-3">
        <% icon_svg = case type.to_sym
           when :notice, :success then '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>'
           when :alert then '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.726-1.36 3.491 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>'
           when :error then '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path></svg>'
           else '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>'
        end %>
        <%= raw icon_svg %>
      </div>
      
      <div class="flex-1">
        <p class="text-sm font-medium"><%= message %></p>
      </div>
    </div>
  </div>
<% end %>
