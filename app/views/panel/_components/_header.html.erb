<div class="max-w-7xl mx-auto">
  <div class="mb-6 animate-on-scroll">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center">
      
      <!-- Left: Title & Subtitle -->
      <div class="mb-3 lg:mb-0">
        <h1 class="text-xl font-bold mb-1" style="color: var(--text-color);">
          <%= local_assigns[:title] || "Page Title" %>
        </h1>
        <% if local_assigns[:subtitle] %>
          <p class="text-sm text-secondary">
            <%= local_assigns[:subtitle] %>
          </p>
        <% end %>
      </div>

      <!-- Right: Breadcrumbs + Action Button -->
      <div class="flex flex-col lg:items-end space-y-2 lg:space-y-1">
        <% if local_assigns[:breadcrumbs] %>
          <nav aria-label="breadcrumb" class="flex">
            <ol class="flex items-center space-x-2 text-xs">
              <%= local_assigns[:breadcrumbs] %>
            </ol>
          </nav>
        <% end %>

        <% if local_assigns[:action_button] %>
          <div class="p-1">
            <%= local_assigns[:action_button] %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>