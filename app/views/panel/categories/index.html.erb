<!-- Header -->
<%= render "panel/_components/header",
    title: "Categories",
    subtitle: "View All Categories",
    breadcrumbs: (
      content_tag(:li, link_to("Dashboard", panel_dashboard_index_path, class: "text-purple hover:text-purple/80"), class: "flex items-center") +
      content_tag(:li, "Categories", class: "flex items-center text-secondary", aria: { current: "page" })
    ),
    action_button: link_to("Create Category", panel_new_category_path, class: "bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200") %>

<%= render "panel/_components/alert_message" %>
<%= render "panel/_components/delete_confirmation_dialog" %>

<div class="max-w-7xl mx-auto">
  <% if @categories.empty? %>
    <div class="bg-card border border-theme rounded-lg p-8 text-center animate-on-scroll">
      <div class="text-purple text-6xl mb-4">ðŸ“‚</div>
      <h3 class="text-xl font-semibold style="color: var(--text-color);" mb-2">No categories available</h3>
      <p class="text-secondary mb-4">Get started by creating your first category.</p>
      <%= link_to "Create one now", panel_new_category_path, class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200" %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 animate-on-scroll">
      <% @categories.each do |category| %>
        <div class="bg-card rounded-lg shadow-sm border border-theme overflow-hidden hover:shadow-md transition-shadow duration-200">
          <!-- Top colored bar with gradient -->
          <div class="h-1 bg-gradient-to-r from-purple-500 to-purple-600"></div>
          
          <div class="p-4 flex flex-col h-full">
            <!-- Category Icon and Name -->
            <div class="mb-3">
              <h5 class="text-sm font-bold style="color: var(--text-color);" mb-1 line-clamp-1">
                <%= truncate(category.name, length: 25) %>
              </h5>
              <div class="text-xs text-secondary flex items-center">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                <%= category.slug rescue category.name.parameterize %>
              </div>
            </div>
            
            <!-- Description -->
            <div class="mb-3 flex-grow">
              <p class="text-secondary text-xs leading-relaxed line-clamp-2">
                <%= truncate(category.description.presence || "No description provided.", length: 60) %>
              </p>
            </div>
            
            <!-- Status and Posts Count -->
            <div class="flex justify-between items-center mb-3">
              <!-- Status Badge -->
              <div>
                <% if category.status %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border border-green-200 text-green-700" style="background-color: var(--card-bg);">
                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border border-gray-200 text-gray-600" style="background-color: var(--card-bg);">
                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                    </svg>
                    Inactive
                  </span>
                <% end %>
              </div>
              
              <!-- Posts Count -->
              <div class="text-xs text-secondary flex items-center">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span><%= category.posts.count rescue 0 %> posts</span>
              </div>
            </div>
            
            <!-- Meta Information -->
            <div class="text-xs text-secondary mb-3">
              <div class="flex justify-between">
                <span class="flex items-center">
                  <svg class="w-2 h-2 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= category.created_at.strftime("%b %d, %Y") %>
                </span>
                <% if category.updated_at != category.created_at %>
                  <span class="flex items-center">
                    <svg class="w-2 h-2 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= category.updated_at.strftime("%b %d") %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="mt-auto flex gap-1">
              <%= link_to public_category_show_path(category.slug), 
                  class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-1.5 px-2 rounded text-xs font-medium transition-colors duration-200",
                  title: "View Category",
                  target: "_blank" do %>
                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View
              <% end %>
              
              <%= link_to panel_edit_category_path(category.id), 
                  class: "flex-1 bg-purple-600 hover:bg-purple-700 text-white text-center py-1.5 px-2 rounded text-xs font-medium transition-colors duration-200",
                  title: "Edit Category" do %>
                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit
              <% end %>
              
              <%= button_to panel_destroy_category_path(category.id), 
                  method: :delete, 
                  class: "flex-1 bg-red-600 hover:bg-red-700 text-white text-center py-1.5 px-2 rounded text-xs font-medium transition-colors duration-200",
                  title: "Delete Category",
                  onclick: "event.preventDefault(); showDeleteDialog(this.form, '#{category.name}'); return false;" do %>
                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>