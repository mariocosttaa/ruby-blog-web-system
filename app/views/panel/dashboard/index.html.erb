<main class="container my-4">
  <!-- Page Header -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-dark">Dashboard</h1>
    <p class="text-muted">Overview of your blog's performance and quick access to management tools</p>
  </div>

  <!-- Stats Grid -->
  <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
    <div class="col">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <div class="fs-2 mb-2">📝</div>
          <h3 class="card-title fw-bold"><%= @total_posts ? @total_posts : 0 %></h3>
          <p class="text-muted mb-0">Total Posts</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <div class="fs-2 mb-2">📂</div>
          <h3 class="card-title fw-bold"><%= @total_categories ? @total_categories : 0 %></h3>
          <p class="text-muted mb-0">Categories</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <div class="fs-2 mb-2">🏷️</div>
          <h3 class="card-title fw-bold"><%= @total_tags ? @total_tags : 0 %></h3>
          <p class="text-muted mb-0">Tags</p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card shadow-sm border-0 text-center h-100">
        <div class="card-body">
          <div class="fs-2 mb-2">💬</div>
          <h3 class="card-title fw-bold"><%= @total_comments ? @total_comments : 0 %></h3>
          <p class="text-muted mb-0">Comments</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="row g-4">
    <!-- Management Section -->
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 p-3">
        <h2 class="fw-bold mb-4"><span class="me-2">⚡</span> Content Management</h2>
        <div class="row row-cols-1 row-cols-md-2 g-3">
          <!-- Posts -->
          <div class="col">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><span class="me-2">📝</span> Posts</h5>
                <p class="card-text text-muted flex-grow-1">Create, edit and manage all your blog posts</p>
                <div class="d-flex gap-2">
                  <%= link_to panel_posts_index_path, title: 'View All', class: "btn btn-sm btn-primary w-50" do %>
                    View All
                  <% end %>
                  <%= link_to panel_new_post_path, title: 'New Post', class: "btn btn-sm btn-outline-primary w-50" do %>
                    New
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- Categories -->
          <div class="col">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><span class="me-2">📂</span> Categories</h5>
                <p class="card-text text-muted flex-grow-1">Organize your content with categories</p>
                <div class="d-flex gap-2">
                  <%= link_to panel_categories_index_path, title: 'View All', class: "btn btn-sm btn-primary w-50" do %>
                    View All
                  <% end %>
                  <%= link_to panel_new_category_path, title: 'New Post', class: "btn btn-sm btn-outline-primary w-50" do %>
                    New
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- Tags -->
          <div class="col">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><span class="me-2">🏷️</span> Tags</h5>
                <p class="card-text text-muted flex-grow-1">Create and manage content tags</p>
                <div class="d-flex gap-2">
                  <%= link_to panel_tags_index_path, title: 'View All', class: "btn btn-sm btn-primary w-50" do %>
                    View All
                  <% end %>
                  <%= link_to panel_new_tag_path, title: 'New Post', class: "btn btn-sm btn-outline-primary w-50" do %>
                    New
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- Comments -->
          <div class="col">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><span class="me-2">💬</span> Comments</h5>
                <p class="card-text text-muted flex-grow-1">Moderate and manage user comments</p>
                <div class="d-flex gap-2">
                  <a href="#" class="btn btn-sm btn-primary w-50">View All</a>
                  <a href="#" class="btn btn-sm btn-outline-primary w-50">Manage</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">

      <!-- Recent Activity -->
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h5 class="fw-bold mb-3">Recent Posts</h5>
          <ul class="list-unstyled mb-0">
            <% if @posts.empty? %>
            <li class="mb-2">
              <small class="text-muted"></small>
              <div>No posts available</div>
            </li>
            <% else %>
              <% @posts.each do |post| %>
              <li class="mb-2">
                <small class="text-muted"><%= post.created_at %></small>
                <div><%= post.title %></div>
              </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
