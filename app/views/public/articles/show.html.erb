<section class="pt-24 pb-16">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Post Header -->
    <header class="mb-8">
      
      <!-- Cover Image -->
      <% if @post.image.attached? %>
        <div class="w-full h-96 overflow-hidden rounded-xl shadow-md mb-6 relative">
          <%= image_tag @post.image, 
                        alt: @post.title,
                        class: "w-full h-full object-cover" %>
        </div>
      <% else %>
        <div class="w-full h-96 bg-gray-200 rounded-xl shadow-md mb-6 flex items-center justify-center text-gray-400">
          <span>No Image</span>
        </div>
      <% end %>

      <!-- Categories -->
      <div class="flex flex-wrap gap-2 mb-4">
        <% @post.categories.each do |category| %>
          <span class="px-3 py-1 text-xs rounded-full category-badge <%= 'category-color-' + (category.id % 5 + 1).to_s %>">
            <%= category.name %>
          </span>
        <% end %>
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold mb-4 font-title text-purple"><%= @post.title %></h1>

    <span class="text-xs text-secondary"><%= time_ago(@post.created_at) %> </span> 

      <!-- Meta -->
      <div class="flex items-center text-sm text-secondary">
        <span>By <%= @post.user.name %></span>
        <span class="mx-2">â€¢</span>
        <span><%= @post.created_at.strftime("%B %d, %Y") %></span>
      </div>
    </header>

    <!-- Post Content -->
    <article class="prose prose-lg max-w-none text-text-color">
      <%= @post.description.html_safe %>
    </article>

    <!-- Tags -->
    <div class="mt-8 flex flex-wrap gap-2">
      <% @post.tags.each do |tag| %>
        <%= link_to "##{tag.name}", "#", class: "px-3 py-1 border border-theme rounded-full text-sm hover:bg-purple/20 hover:border-purple transition-colors" %>
      <% end %>
    </div>

    <!-- Comments Section -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold mb-8 text-purple">Comments</h2>
      <div class="bg-card border border-theme rounded-lg p-8 text-center">
        <p class="text-secondary">Comments are coming soon!</p>
      </div>
    </section>
  </div>
</section>
