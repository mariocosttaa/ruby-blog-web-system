
    <!-- Categories Section -->
    <section class="animate-on-scroll">
        <div class="max-w-6xl mx-auto">
            <h3 class="text-3xl font-bold mb-8 text-center text-purple">Explore by Categories</h3>
            <div class="flex flex-wrap gap-3 justify-center">
                <% @categories.each do |category|%>
                    <%= link_to "#{category.name}", public_category_show_path(category.slug), class: "px-6 py-2 rounded-full category-badge category-color-1 transition-all duration-300" %>
                <% end %>
            </div>
        </div>
    </section>